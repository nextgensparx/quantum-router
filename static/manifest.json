{
    "manifest_version": 2,
    "name": "Quantum Router",
    "short_name": "QuantumRouter",
    "author": "Sipho Mateke",
    "version": "0.0.1",
    "default_locale": "en",
    "description": "Redesigns router admin pagues for the 21st century.",
    "icons": {
        "16" : "./icons/icon128.png",
        "48" : "./icons/icon128.png",
        "128" : "./icons/icon128.png"
    },
    "options_ui": {
      "chrome_style": false,
      "page": "./options.html"
    },
    "content_scripts": [{
        "matches": [
            "http://192.168.8.1/*"
        ],
        "js": [
            "./js/manifest.js",
            "./js/vendor.js",
            "./js/content.js"
        ],
        "run_at": "document_end"
    }],
    "background": {
        "page": "./background.html"
    },
    "browser_action": {
        "default_icon": "./icons/icon128.png",
        "default_title": "Quantum Router"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "notifications",
        "downloads",
        "storage",
        "https://*/*",
        "http://*/*"
    ]
}
