{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "serve",
      "type": "npm",
      "script": "serve:electron",
      "problemMatcher": []
    },
    {
      "label": "debug",
      "type": "npm",
      "script": "debug:electron",
      "problemMatcher": []
    },
    {
      "label": "build",
      "type": "npm",
      "script": "build:electron",
      "problemMatcher": []
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "problemMatcher": [
        {
          "owner": "eslint",
          "fileLocation": ["relative", "${workspaceFolder}"],
          "pattern": {
            "regexp": "^(.+?):\\s(.+)\\s\\((.+)\\)\\sat\\s(.+?):(\\d+):(\\d+):$",
            "severity": 1,
            "message": 2,
            "code": 3,
            "file": 4,
            "line": 5,
            "column": 6
          }
        }
      ]
    }
  ]
}
